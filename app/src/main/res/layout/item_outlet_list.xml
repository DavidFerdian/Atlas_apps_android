<?xml version="1.0" encoding="utf-8"?>


<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardView"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_rowWeight="1"
    android:layout_columnWeight="1"
    android:layout_gravity="center_horizontal"
    android:layout_marginHorizontal="3dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_outlet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@id/sampleProductCard"
            android:text="Nama Apotek"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_outlet_name"
            android:layout_marginHorizontal="10dp"
            android:layout_toEndOf="@id/sampleProductCard"
            android:text="Alamat"
            android:textColor="@color/black"
            android:textSize="10dp" />

        <View
            android:id="@+id/dividerLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_address"
            android:layout_marginVertical="8dp"
         android:layout_marginHorizontal="10dp"
            android:layout_toEndOf="@id/sampleProductCard"
            android:background="@android:color/darker_gray" />
        <TextView
            android:id="@+id/tv_time_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dividerLine"
            android:layout_marginHorizontal="10dp"
            android:layout_toEndOf="@id/sampleProductCard"
            android:drawableLeft="@drawable/ic_baseline_access_time_24"
            android:text="  07:45 - 07:44"
            android:textColor="@color/black"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_time_start"
            android:layout_marginHorizontal="10dp"
            android:layout_toEndOf="@id/sampleProductCard"
            android:drawableLeft="@drawable/ic_baseline_phone_in_talk_24"
            android:text="  0858585849848495305"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/sampleProductCard"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_image_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
